{
  "name": "@magents/desktop",
  "version": "1.0.0",
  "description": "Magents Desktop App - Electron-based desktop application for managing AI agents",
  "main": "dist/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "electron dist/main.js",
    "dev": "concurrently \"npm run watch\" \"wait-on dist/main.js && electron dist/main.js\"",
    "watch": "tsc --watch",
    "build": "tsc",
    "build:renderer": "cd ../web && npm run build && cp -r dist/* ../desktop/dist/renderer/",
    "build:all": "npm run build && npm run build:renderer",
    "dist": "npm run build:all && electron-builder",
    "dist:mac": "npm run build:all && electron-builder --mac",
    "dist:win": "npm run build:all && electron-builder --win",
    "dist:linux": "npm run build:all && electron-builder --linux",
    "pack": "npm run build:all && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "electron",
    "magents",
    "ai-agents",
    "desktop",
    "typescript",
    "react"
  ],
  "author": {
    "name": "Magents Team",
    "email": "team@magents.dev"
  },
  "license": "MIT",
  "dependencies": {
    "@magents/shared": "workspace:*",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.4",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4"
  },
  "build": {
    "appId": "com.magents.desktop",
    "productName": "Magents",
    "copyright": "Copyright Â© 2024 Magents Team",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "resources/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": null
  },
  "engines": {
    "node": ">=18.0.0"
  }
}